<section class="gm-moves">
	<h1 class="gm-moves-header">
		{{localize 'CityOfMist.terms.moves' }}

		{{#if (eq actor.system.locked false)}}
		<a class="create-gm-move" data-actor-id={{owner.id}}> <i class="fas fa-plus-square"></i></a>
		{{/if}}
	</h1>
	{{#if (hasGMMoveOfType owner "intrusion")}}
	<label class="gmmove-type-label">
		{{localize 'CityOfMist.terms.intrusions' }}
	</label>
	{{/if}}
	{{#each owner.gmmoves as |item id|}}
	{{#if (eq item.system.subtype "entrance")}}
	{{> "systems/city-of-mist/templates/parts/gmmove-display.html" owner=../actor move=item locked=../locked sheetowner=../actor movetype=move.system.subtype data=item.system}}
	{{/if}}
	{{/each}}
	{{#each owner.gmmoves as |item id|}}
	{{#if (eq item.system.subtype "intrusion")}}
	{{> "systems/city-of-mist/templates/parts/gmmove-display.html" owner=../actor move=item locked=../locked sheetowner=../actor movetype=move.system.subtype data=item.system}}
	{{/if}}
	{{/each}}
	{{#if (hasGMMoveOfType owner "custom")}}
	<label class="gmmove-type-label">
		{{localize 'CityOfMist.terms.customMoves' }}
	</label>
	{{/if}}
	{{#each owner.gmmoves as |item|}}
	{{#if (eq item.system.subtype "custom")}}
	{{> "systems/city-of-mist/templates/parts/gmmove-display.html" owner=../actor move=item locked=../locked sheetowner=../actor movetype=item.system.subtype data=item.system}}
	{{/if}}
	{{/each}}
	{{#if (hasGMMoveOfType owner "downtime")}}
	<label class="gmmove-type-label">
		{{localize 'CityOfMist.terms.downtimeMoves' }}
	</label>
	{{/if}}
	{{#each owner.gmmoves as |item|}}
	{{#if (eq item.item.subtype "downtime")}}
