<div class="{{theme.themebook.subtype}}-theme theme-block" >
	<div class="themebook-name flip-button"> {{theme.themebook.displayedName}}</div>

	<div class="att-fade-section">
		{{> "systems/city-of-mist/templates/parts/themePointControls.hbs" theme=theme locked=locked themePointType="attention" }}
		{{> "systems/city-of-mist/templates/parts/themePointControls.hbs" theme=theme locked=locked themePointType="crack" }}
		{{#if (useMilestoneTrack theme)}}
		{{> "systems/city-of-mist/templates/parts/themePointControls.hbs" theme=theme locked=locked themePointType="milestone" }}
		{{/if}}
	</div>

	<div class="improvement-section">
		<div id="improvements-header" class="improvements-header"> {{localize 'CityOfMist.terms.improvements' }}
			{{#if (gt theme.system.unspent_upgrades 0)}}
			<a class="theme-create-improvement" data-distinct="true" data-item-type="improvement" data-duplicates="false" data-actor-id="{{owner.id}}" data-theme-id="{{theme.id}}" title= "Add Improvement"> <i class="fas fa-plus-square"></i></a>
			{{else}}
			<span title="Not enough attention to add improvement">
				<i class="fas fa-plus-square fa-disabled"></i>
			</span>
			{{/if}}
		</div>
		<ul class="improvement-list">
			{{#each (getImprovements theme) as |imp |}}
			<li>
				{{> "systems/city-of-mist/templates/parts/improvement-display.html" improvement=imp owner=../owner locked=../locked sheetowner=../sheetowner }}
			</li>
			{{/each}}
		</ul>
	</div>

</div>

